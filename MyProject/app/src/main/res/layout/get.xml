<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark" >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/white"
        android:id="@+id/et_send" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_send"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:text="Start Activity"
        android:background="@android:color/holo_green_dark"
        android:textColor="@android:color/white"
        android:id="@+id/start_activity" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_send"
        android:layout_toLeftOf="@id/start_activity"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:text="StartActivityForResults"
        android:background="@android:color/holo_green_dark"
        android:textColor="@android:color/white"
        android:id="@+id/activity_results"
        android:layout_gravity="center_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_results"
        android:layout_margin="10dp"
        android:text="New Text"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        android:id="@+id/show_answer" />

</RelativeLayout>
